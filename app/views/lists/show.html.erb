
<h1><%= @list.name %></h1>
<%= link_to "back-to-list", lists_path %>
<%= link_to "delete", list_path(@list),
 data: { turbo_method: :delete, turbo_confirm: "are you sure"} %>
<%= link_to "Add a Bookmark",
new_list_bookmark_path(@list) %>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %><br><%= bookmark.movie_id %><%= bookmark.list_id %></li>
  <% end %>
</ul>
